extends layout

block content
    if user == null
        .card.mx-auto.login-card
            .card-header
                | Registration:
            .card-body
                form#signup-form
                    .form-group
                        label(for='signup-email') Email address:
                        input#signup-email.form-control(type='email')
                    .form-group
                        label(for='signup-password') Password:
                        input#signup-password.form-control(type='password')
                    .form-group
                        label(for='signup-password-repeat') Repeat password:
                        input#signup-password-repeat.form-control(type='password')

                    button#signup-confirm-btn.btn.btn-primary(type='submit') Submit